{% extends '::layout.html.twig' %}
{% block body %}
            <div class="col-md-12 presentation video-from">
            <div class="row">
            <div class="col-md-6">
                <iframe src="http://www.youtube.com/embed/UemA5HPkjs8?rel=0" style="min-height: 310px;" width="100%"></iframe>
            </div>
            <div class="col-md-6">
                        {% for flashMessage in app.session.flashbag.get('sent') %}
                            <div class="alert alert-info col-md-12" role="alert">
                                {{ flashMessage }}             
                            </div>
                        {% endfor %}
                        <div class="form-offer">
                            <h1 class="center"><a href="http://www.particulier-coach.com" title="particulier & coach">Particulier & Coach</a></h1>
                            <p>Recevez notre guide GRATUIT <strong>"Vente sans agence immobili&egrave;re"</strong> d&eacute;s l'ouverture du site!</p>
                            <div class="clearfix"></div>
                            <form class="mrg-t-10" action="{{path('coach_annonce_homepage')}}" method="post">
                                <div class="form-group">
                                    {{form_widget(form.nom,{'attr': {'class': 'form-control','placeholder':'Nom et pr√©nom'}})}}
                                </div>
                                <div class="form-group">
                                    {{form_widget(form.email,{'attr': {'class': 'form-control','placeholder':'Entrer email'}})}}
                                </div>

                                <div>
                                    {% for child in form.profession %}
                                        <label class="btn btn-default">{{ form_widget(child)}}
                                        {{ form_label(child)}}
                                        </label>
                                    {% endfor %}
                                    <button type="submit" class="btn btn-success pull-right">Envoyer</button>
                                </div>
                                {{ form_rest(form) }}
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="row">
                    <{{ titres[1].balise }} class="center" style="font-size:28px;">{{ titres[1].titre }}</{{ titres[1].balise }}>
                    <div class="customNavigation pull-right">
                        <a class="btn prev"><i class="fa fa-chevron-left"></i></a>
                        <a class="btn next"><i class="fa fa-chevron-right"></i></a>
                    </div>
                    {{ render(controller('CoachPageBundle:Page:blockBiens')) }}
                    </div>
            </div>
            <div class="col-md-12 wells buy-and-sell">
                <{{ titres[2].balise }} class="center" style="font-size:28px;">{{ titres[2].titre }}</{{ titres[2].balise }}>
                {{ render(controller('CoachPageBundle:Page:blockText')) }}
            </div>
            <div class="clearfix"></div>
            <div class="green-bar">
                <a href="{{path('coach_pack')}}" title="d&eacute;poser votre annonce">D&eacute;posez votre annonce</a>
            </div>
            {{ render(controller('CoachPageBundle:Page:blockMiddle')) }}
            <div class="wells mrg-tb-20">
                <{{ titres[3].balise }} class="center" style="font-size:28px;">{{ titres[3].titre }}</{{ titres[3].balise }}>
                <div class="customNavigation">
                    <a class="btn prev"><i class="fa fa-chevron-left"></i></a>
                    <a class="btn next"><i class="fa fa-chevron-right"></i></a>
                </div>
                {{ render(controller('CoachPageBundle:Page:blockAnnonces')) }}
            </div>    
{% endblock %}    
{% block pub %}
<div class="pub-stephan wow bounceInRight"><a href="http://urlz.fr/1o8x" target="_blank" title="valoriser votre logement"><img src="{{asset('bundles/coachfront/images/pub/stephane.jpg')}}" alt="valoriser votre logement"></a></div>
{% endblock %}