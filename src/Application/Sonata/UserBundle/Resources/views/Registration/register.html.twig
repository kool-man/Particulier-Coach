{% extends '::layout.html.twig' %}
{% block body %}
    <div class="row">
    <div class="col-md-12">

        <ol class="breadcrumb">
            <li class="active">Inscription</li>
        </ol>
        

        <div class="col-md-6 col-md-offset-3">
            <div class="col-md-12 alert alert-warning">
            {% for flashMessage in app.session.flashbag.get('error') %}

                {{ flashMessage }}

            {% endfor %}
            
            </div>
        </div>
        <form action="{{ path('coach_user_registration_register') }}" {{ form_enctype(form) }} method="POST">
            <div class="col-md-6 col-md-offset-3">
                {% if not form.vars.valid %}
                <div class="alert alert-danger col-md-12" role="alert">
                    {{ form_errors(form.lastname) }}
                    {{ form_errors(form.firstname) }}
                    {{ form_errors(form.phone) }}
                    {{ form_errors(form.adresse_postale) }}
                    {{ form_errors(form.cp) }}
                    {{ form_errors(form.username) }}
                    {{ form_errors(form.email) }}
                    {{ form_errors(form.plainPassword.first)}}
                    {{ form_errors(form.plainPassword.second)}}
                </div>
                {% endif %}
            </div>    
            <div class="col-md-6 col-md-offset-3 connexion">
            <h3 class="center">Inscription</h3>
            <div class="wells col-md-12">                
                {{ form_errors(form) }}                        
                <div class="form-group">
                    <label>
                        <span class="input-tr-addon"><i class="fa fa-user"></i></span>
                        {{ form_widget(form.username, {'attr': {'placeholder': "Username",'class':'form-control'}}) }}
                    </label>
                </div>    
                <div class="form-group">
                    <label>
                        <span class="input-tr-addon"><i class="fa fa-envelope-o"></i></span>
                        {{ form_widget(form.email, {'attr': {'placeholder': "Email",'class':'form-control'}}) }}
                    </label>
                </div>
                <div class="form-group">
                    <label>
                        <span class="input-tr-addon"><i class="fa fa-lock"></i></span>
                        {{ form_widget(form.plainPassword.first, {'attr': {'placeholder': "Mot de passe",'class':'form-control'}}) }}
                    </label>
                </div>
                <div class="form-group">
                    <label>
                        <span class="input-tr-addon"><i class="fa fa-lock"></i></span>
                        {{ form_widget(form.plainPassword.second, {'attr': {'placeholder': "Vérification",'class':'form-control'}}) }}
                    </label>
                </div>
                <div class="form-group">
                    <label>
                        <span class="input-tr-addon"><i class="fa fa-user"></i></span>
                        {{ form_widget(form.lastname, {'attr': {'placeholder': "Nom",'class':'form-control'}}) }}
                    </label>
                </div>
                <div class="form-group">
                    <label>
                        <span class="input-tr-addon"><i class="fa fa-user"></i></span>
                        {{ form_widget(form.firstname, {'attr': {'placeholder': "Prénom",'class':'form-control'}}) }}
                    </label>
                </div>
                <div class="form-group">
                    <label>
                        <span class="input-tr-addon"><i class="fa fa-envelope-o"></i></span>
                        {{ form_widget(form.phone, {'attr': {'placeholder': "Téléphone",'class':'form-control'}}) }}
                    </label>
                </div>
                <div class="form-group">
                    <label>
                        <span class="input-tr-addon"><i class="fa fa-envelope-o"></i></span>
                        {{ form_widget(form.adresse_postale, {'attr': {'placeholder': "Adresse",'class':'form-control'}}) }}
                    </label>
                </div>
                <div class="form-group">
                    <label>
                        <span class="input-tr-addon"><i class="fa fa-envelope-o"></i></span>
                        {{ form_widget(form.cp, {'attr': {'placeholder': "Code postale",'class':'form-control'}}) }}
                    </label>
                </div>    
                <div class="form-group">
                    <input class="btn btn-success pull-right" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" type="submit"> 
                </div>
                
            </div>
           
        </div>
        {{ form_rest(form) }}
        </form>        
    </div>
</div>

<br>
<br>
<br>
{% endblock %}