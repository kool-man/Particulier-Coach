    
        <form action="{{ path('coach_user_security_profile_edit') }}" {{ form_enctype(form) }} method="POST">
             
            <div class="col-md-6 col-md-offset-3 connexion">
            <div class="wells col-md-12">                
                    {{ form_errors(form) }}                        
                <div class="form-group">
                    <label>
                        <span class="input-tr-addon"><i class="fa fa-user"></i></span>
                       {{form_widget(form.username,{'attr': {'placeholder': "Username",'class':'form-control'}})}}
                    </label>
                </div>
                <div class="form-group">
                    <label>
                        <span class="input-tr-addon"><i class="fa fa-envelope-o"></i></span>
						{{form_widget(form.email,{'attr': {'placeholder': "Email",'class':'form-control'}})}}
                        
                    </label>
                </div>
				<div class="form-group">
                    <label>
                        <span class="input-tr-addon"><i class="fa fa-envelope-o"></i></span>
						{{form_widget(form.current_password,{'attr': {'placeholder': "Password",'class':'form-control'}})}}
                        
                    </label>
                </div>
				
               
                <div class="form-group">
                    <input class="btn btn-success pull-right" value="Update" type="submit"> 
                </div>
                
            </div>
           
        </div>
        {{ form_rest(form) }}
        </form>        
 
